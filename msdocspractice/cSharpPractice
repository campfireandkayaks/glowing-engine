//Console.WriteLine("Hello World!");

Console.Write("Congratulations!");
Console.Write(" ");
Console.Write("You wrote your first lines of code.");

//Declaring a variable
string firstName;
//data type string, named it firstName. It can
//only hold alphanumeric values.

//Setting value doesn't give you output
firstName = Bob;

//Getting a value using the variable name
Console.WriteLine(firstName);

//Reassign a variable's value
firstName = Billy;
Console.WriteLine(firstName);
firstName = Jaime;
Console.WriteLine(firstName);
firstName = Clayton;
Console.WriteLine(firstName);
firstName = Clyde;
Console.WriteLine(firstName);

//Initializing the variable
string lastName = "Maples";
Console.WriteLine(lastName);

//Character escape sequences
Console.WriteLine("Hello\nWorld!");
Console.WriteLine("Hello\tWorld!");
Console.WriteLine("Hello\"World\"");
Console.WriteLine("c:\\source\\repos");

//@ verbatim dirctive keeps all whitespace and special chars. Double up on "" to keep.
Console.WriteLine(@"   c:\source\repos   
      (""this is where your code goes"")");


// Unicode escape chars, \u + the 4 digit code for UTF-16
Console.WriteLine("\u3053\u3093\u306B\u3061\u306F World!");

//String interpolation, the literal becomes the template when prefixed with $
string message = $"{greeting} {firstName}!";

//What happens when we try to add an int and a string?
string firstName = "Bob";
int widgetsSold = 7;
Console.WriteLine(firstName + " sold " + widgetsSold + " widgets.");

string firstName = "Bob";
int widgetsSold = 7;
Console.WriteLine(firstName + " sold " + widgetsSold + 7 + " widgets.");

//Casting and int to decimal
int first = 7;
int second = 5;
decimal quotient = (decimal)first / (decimal)second;
Console.WriteLine(quotient);

//Using the remainder operator
Console.WriteLine("Modulus of 200 / 5 : " + (200 % 5));
Console.WriteLine("Modulus of 7 / 5 : " + (7 % 5));


//Increment and decrement operator position makes a difference
int value = 1;
value++;
Console.WriteLine("First: " + value);
Console.WriteLine("Second: " + value++);
Console.WriteLine("Third: " + value);
Console.WriteLine("Fourth: " + (++value));//parenthesis used here to aid readability.

